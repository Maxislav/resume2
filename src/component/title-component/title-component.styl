@media print
  .title
    display none

.title
  height 100px
  background black
  color white
  position relative


.my_name
  height 100%
  display flex
  align-items center
  img
    width 30px
    height 30px
  h2
    text-shadow 0 0 10px white, 20px 0 40px white, -20px 0 40px white
  &>*
    margin  0 20px
.version
  position absolute
  right 0
  bottom 0
  padding 8px
  font-size 12px
.download
  color white
  padding 5px 15px
  border 1px solid white
  border-radius 2px
  position absolute
  right 15px
  top 15px
  &:hover
    background rgba(255,255,255, 0.3)
    text-shadow 0 0 5px white