@import "../../../styl/constant.styl"
.content
  //padding 8px
  margin-bottom 15px
  $box-shadow()
  padding 8px
.ico
  float left
  width 150px
  height auto
.clear_both
  clear both
.overflow
  overflow hidden
.bookmark
  height 48px
  z-index 2
  background white
  &>div
    width 160px
    overflow hidden
    background white
    position absolute
    padding 8px 8px 0 8px
    &>div
      padding 8px
      border-top-right-radius 5px
      $box-shadow()
      &>a
        &>img
          display block
          width 100%
          height 100%
