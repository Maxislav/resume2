@import "../../../styl/constant.styl"
.component
  margin -8px
.content
  //padding 8px
  margin-bottom 15px
  $box-shadow()
  padding 15px
.ico
  width 80px
  height auto
  float left
.mainImage
  float right
  width 40%
  height auto
.clear_both
  clear both
.overflow
  overflow hidden
.play_prism
  width 160px
  height 35px
  px
  &>a>img
    width 100%
    height 100%
.imgs
  white-space nowrap
  overflow-x auto
  margin 8px -8px
  &>img
    padding 0 8px
    width 160px
    height auto
.bookmark
  height 48px
  z-index 2
  background white
  &>div
    width 160px
    overflow hidden
    background white
    position absolute
    padding 8px 8px 0 8px
    &>div
      padding 8px
      border-top-right-radius 5px
      $box-shadow()
      &>a
        &>img
          display block
          width 100%
          height 100%
