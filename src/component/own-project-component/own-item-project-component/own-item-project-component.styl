@import "../../../styl/constant.styl"
.component
  margin -8px
  position relative

@media print
  .component
    border-bottom 2px solid gray
.content
  margin-bottom 15px
  $box-shadow()
  padding 15px
  &>*:not(img)
    margin  15px 0
@media print
  .content
    padding 0
    box-shadow none
    border-bottom 2px solid gray
.app_name
  display flex
  align-items center
  margin 8px -8px
  &>*
     padding 0 8px
.ico
  width 80px
  height auto
  float left
  padding 8px
.git
  clear left

@media print
  .mainImage
    display none
.mainImage
  float right
  width 40%
  max-height 200px
  height auto
.clear_both
  clear both
.overflow
  overflow hidden
.ul
  clear left
  &>li
    list-style disc
    margin-left 20px
.play_prism
  width 175px
  height 35px
  px
  &>a>img
    width 100%
    height 100%
@media print
  .imgs
    display none
.imgs
  white-space nowrap
  overflow-x auto
  clear both
  margin 8px -8px
  &>img
    padding 0 8px
    width 160px
    height auto


.bookmark
  height 42px
  z-index 2
  background white
  &>div
    width 200px
    overflow hidden
    background white
    position absolute
    padding 8px 8px 0 8px

    &>div
      padding 8px
      border-top-right-radius 5px
      $box-shadow()
      &>a
        &>img
          display block
          width 100%
          height 100%
@media print
  .bookmark>div>div
    box-shadow none