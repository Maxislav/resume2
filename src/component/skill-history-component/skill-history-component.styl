@import "../../styl/constant.styl"
.input
  padding   8px
  border none
  outline none
  font-size 16px
  border-bottom 1px solid gray
.content
  padding 20px
  li
    list-style none
  button
    padding 8px 15px
    text-align center
    min-width 120px
    background $color-background-button
    border none
    outline none
    cursor pointer
.history-row
  margin 10px 0

.history-table
  min-width 50%
  margin 0 -8px
  tr:hover
    background $color-hover-bookmark
  td:nth-child(1)
    font-weight bold
  td:nth-child(2)
    text-align right
  td
    width 50%
    padding 5px 8px
